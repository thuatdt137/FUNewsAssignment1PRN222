@page
@model Assignment2.Pages.Staff.ProfileModel

@{
    ViewData["Title"] = "Hồ sơ cá nhân";
}

<h2>Hồ sơ cá nhân</h2>

<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div class="mb-3">
                <label asp-for="Account.AccountEmail" class="form-label">Email</label>
                <input asp-for="Account.AccountEmail" class="form-control" required />
            </div>
            <div class="mb-3">
                <label asp-for="Account.AccountName" class="form-label">Tên</label>
                <input asp-for="Account.AccountName" class="form-control" required />
            </div>
            <div class="mb-3">
                <label asp-for="Account.AccountPassword" class="form-label">Mật khẩu</label>
                <input asp-for="Account.AccountPassword" class="form-control" type="password" required />
            </div>
            <button type="submit" class="btn btn-primary">Cập nhật</button>
        </form>
    </div>
</div>